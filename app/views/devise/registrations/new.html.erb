<h2>Регистрация</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :login, "Логин: *" %>
  <%= f.text_field :login %></p>
  
  <p><%= f.label :password, "Пароль: *" %>
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation, "Повтор пароля: *" %>
  <%= f.password_field :password_confirmation %></p>
  
  <p><%= f.label :email, "E-mail: *" %>
  <%= f.email_field :email %></p>
  
  <p><%= f.label :name, "Имя" %>
  <%= f.text_field :name %></p>
  
  <p><%= f.label :last_name, "Фамилия" %><br />
  <%= f.text_field :last_name %></p>

  <p><%= f.label :city, "Город" %>
  <%= f.text_field :city %></p>

  <p><%= f.label :adress, "Адрес" %>
  <%= f.text_field :adress %></p>  

  <p><%= f.label :phone, "Телефон" %>
  <%= f.text_field :phone %></p>
  

  <p><%= f.submit "Зарегистрироваться" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
